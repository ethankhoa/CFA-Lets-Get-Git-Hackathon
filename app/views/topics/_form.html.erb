  </div> -->

        <!-- <div class="field">
    <%#= f.label :last_post_at %>
    <%#= f.datetime_select :last_post_at %>
  </div> -->

        <div class="actions">
            <%= f.submit "Create", class: "button is-primary"%>
            <%= link_to 'Back', topics_path %>
        </div>
        <% end %>
    </div>
</div>
